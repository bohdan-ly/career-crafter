{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["esnext", "DOM", "DOM.Iterable", "ESNext"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "jsx": "react-jsx",
    "paths": {}
  },
  "include": ["src", "main.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "build",
    "dist",
    "lib",
    ".github",
    ".next",
    "_site",
    "coverage",
    "cypress",
    "node_modules",
    "public",
    "./[!main.d.ts]**"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
